<% content_for :title do %>
    タイピング大会
<% end %>
<% content_for :font do %>
  <link
      href="https://fonts.googleapis.com/css?family=Teko"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/css?family=Roboto+Condensed:700"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=M+PLUS+Rounded+1c:wght@300&display=swap"
      rel="stylesheet"
    />
<% end %>
<% content_for :stylesheet do %>
    <%= stylesheet_link_tag "user/signup", "data-turbo-track": "reload" %>
<% end %>
<% content_for :javascript do %>
    <%= javascript_include_tag 'user/signup', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'user/session', 'data-turbolinks-track': 'reload' %>
<% end %>

<header>
    <a href="/">
      <div class="headerTitle">
        <div class="container"><h2>TECH.<span>C</span>.</h2></div>
        <div class="container">
            <h3>CREATORS FES</h3>
            <p>20<span>22</span></p>
        </div>
      </div>
    </a>
</header>
    <div class="wave">
      <article class="form">
        <%= form_with model: @user, url: user_path, local: true do |f|  %>
          <p class="field">
          名前 <br>
          <%= f.text_field :name %>
          </p>

          <p class="field">
          メールアドレス または 電話番号 <br>
          <%= f.text_field :email %>
          <br><span>※景品をお届けする際にご連絡します</span>
          <p class="field">
          <%= f.hidden_field :password, value: "why" %>
          </p>

          <p class="field">
          <%= f.hidden_field :password_confirmation, value: "why" %>
          </p>
          <p class="field">
          スコア<br>
          <%= f.number_field :speed, id: "js-score", :readonly => true %>
          </p>
          <%= f.submit "登録", class: "btn", id: "js-button" %>
          <br>
          <%# <%= link_to "すでに登録済みの方はこちら", login_path, class: "login" %>

        <% end %>
      </article>
      <canvas id="waveCanvas"></canvas>
    </div>