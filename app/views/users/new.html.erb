<h1>SignUp</h1>

<%= form_with model: @user, url: user_path, local: true do |f|  %>
  <div class="field">
  <%= f.label :name %> <br>
  <%= f.text_field :name %>
  </div>

  <div class="field">
  <%= f.label :email %> <br>
  <%= f.text_field :email %>
  </div>

  <div class="field">
  <%= f.label :password %> <br>
  <%= f.password_field :password %>
  </div>

  <div class="field">
  <%= f.label :password_confirmation %> <br>
  <%= f.password_field :password_confirmation %>
  </div>

  <div class="field">
  <%= f.label :speed %> <br>
  <%= f.number_field :speed %>
  </div>
  <div>
    <%= f.submit "Sign up" %>
  </div>
  <br>
  <%= link_to "Login", login_path %>

<% end %>
